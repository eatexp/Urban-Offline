        [
            "^**Cardiopulmonary Resuscitation (CPR) Guide**",
            "\n",
            "^Is the person unresponsive and not breathing normally?",
            "\n",
            "ev",
            "str",
            "^Yes, they're unresponsive and not breathing",
            "/str",
            "/ev",
            {
                "*": "0.c-0"
            },
            "ev",
            "str",
            "^They're breathing but unconscious",
            "/str",
            "/ev",
